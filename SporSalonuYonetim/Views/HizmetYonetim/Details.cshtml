@model SporSalonuYonetim.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Detayı";
}

<h2>Hizmet Detayı</h2>
<hr />

<dl class="row">
    <dt class="col-sm-3">Ad</dt>
    <dd class="col-sm-9">@Model.Ad</dd>

    <dt class="col-sm-3">Süre (dk)</dt>
    <dd class="col-sm-9">@Model.SureDakika</dd>

    <dt class="col-sm-3">Ücret</dt>
    <dd class="col-sm-9">@Model.Ucret.ToString("0.00")</dd>

    <dt class="col-sm-3">Kategori</dt>
    <dd class="col-sm-9">@Model.Kategori</dd>

    <dt class="col-sm-3">Salon</dt>
    <dd class="col-sm-9">@Model.Salon?.Ad</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
<a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
