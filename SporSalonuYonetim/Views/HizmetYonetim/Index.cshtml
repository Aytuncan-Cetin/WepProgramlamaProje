@model IEnumerable<SporSalonuYonetim.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmet Listesi";
}

<h2>Hizmetler</h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Hizmet Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Süre (dk)</th>
            <th>Ücret</th>
            <th>Kategori</th>
            <th>Salon</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.SureDakika</td>
                <td>@item.Ucret.ToString("0.00")</td>
                <td>@item.Kategori</td>
                <td>@item.Salon?.Ad</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
