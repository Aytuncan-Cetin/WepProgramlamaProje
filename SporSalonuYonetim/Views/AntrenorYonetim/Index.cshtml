@model IEnumerable<SporSalonuYonetim.Models.Antrenor>

@{
    ViewData["Title"] = "Antrenörler";
}

<h2>Antrenör Listesi</h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Antrenör Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık Alanları</th>
            <th>Salon</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AdSoyad</td>
                <td>@item.UzmanlikAlanlari</td>
                <td>@item.Salon?.Ad</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    <a asp-controller="AdminMusaitlik"
                       asp-action="Index"
                       asp-route-antrenorId="@item.Id"
                       class="btn btn-sm btn-outline-primary">
                        Müsaitlik
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
