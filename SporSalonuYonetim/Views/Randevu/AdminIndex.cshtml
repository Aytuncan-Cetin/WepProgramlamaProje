@model List<SporSalonuYonetim.Models.Randevu>

<h2>Randevu Yönetimi</h2>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Üye</th>
            <th>Antrenör</th>
            <th>Hizmet</th>
            <th>Tarih</th>
            <th>Onay</th>
            <th>İşlem</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Uye.Email</td>
                <td>@r.Antrenor.AdSoyad</td>
                <td>@r.Hizmet.Ad</td>
                <td>@r.Baslangic.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@(r.Onaylandi ? "Onaylandı" : "Bekliyor")</td>
                <td>
                    @if (!r.Onaylandi)
                    {
                        <a class="btn btn-success btn-sm" asp-action="Onayla" asp-route-id="@r.Id">Onayla</a>
                    }

                    <form asp-action="AdminSil" asp-route-id="@r.Id" method="post" style="display:inline"
                          onsubmit="return confirm('Randevuyu silmek istediğinize emin misiniz?');">
                        <button class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
